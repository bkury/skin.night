<?xml version="1.0" encoding="UTF-8"?>
<window id="104">
	<controls>
	<control type="group">
		<posx>1020</posx>
		<posy>10</posy>
		<animation effect="zoom" start="20" center="1125,55" end="100" time="500" tween="back" easing="out">Visible</animation>
		<animation effect="zoom" start="20" center="1125,55" end="100" time="500" tween="back" easing="out">WindowOpen</animation>
		<animation effect="zoom" start="100" center="1125,55" end="20" time="500" tween="back" easing="in">Hidden</animation>
		<animation effect="zoom" start="100" center="1125,55" end="20" time="500" tween="back" easing="in">WindowClose</animation>
		<visible>!player.passthrough</visible>

		<!-- Background -->
		<control type="image">
			<width>250</width>
			<height>90</height>
			<texture>volume/volume-bg.png</texture>
			<aspectratio scalediffuse="false">keep</aspectratio>
			<colordiffuse>FF444444</colordiffuse>
		</control>

		<!-- Progress Bar -->
		<control type="image">
			<posx>15</posx>
			<posy>40</posy>
			<width>210</width>
			<height>30</height>
			<texture border="15">base-rounded.png</texture>
			<colordiffuse>44FFFFFF</colordiffuse>
		</control>
		<control type="progress" id="111">
			<posx>15</posx>
			<posy>40</posy>
			<width>210</width>
			<height>30</height>
			<info>Player.Volume</info>
			<texturebg>volume/volume-blank.png</texturebg>
			<midtexture>volume/volume-slide.png</midtexture>
			<colordiffuse>mainblue</colordiffuse>
			<visible>true</visible>
			<reveal>true</reveal>
			<visible>!Player.Muted</visible>
		</control>
		<!-- Volume Overlay -->
		<control type="image">
			<posx>15</posx>
			<posy>40</posy>
			<width>210</width>
			<height>30</height>
			<texture>volume/volume-overlay.png</texture>
		</control>
		<!-- Volume On Image -->
		<control type="image">
			<posx>22</posx>
			<posy>12</posy>
			<width>35</width>
			<height>35</height>
			<aspectratio scalediffuse="false">keep</aspectratio>
			<texture>volumefull.png</texture>
			<posy>0</posy>
			<posx>0</posx>
			<visible>!Window.IsVisible(113)</visible>
			<colordiffuse>FFCCCCCC</colordiffuse>
		</control>
		<!-- Volume Off Image -->
		<control type="image">
			<posx>22</posx>
			<posy>12</posy>
			<width>35</width>
			<height>35</height>
			<aspectratio scalediffuse="false">keep</aspectratio>
			<texture>volumeoff.png</texture>
			<visible>Window.IsVisible(113)</visible>
			<colordiffuse>FFCCCCCC</colordiffuse>
		</control>
		<!-- Volume Label -->
		<control type="label">
			<posx>62</posx>
			<posy>10</posy>
			<width>200</width>
			<height>40</height>
			<font>Digital_Label_Volume</font>
			<textcolor>FFCCCCCC</textcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>$INFO[Control.GetLabel(111)]</label>
		</control>
	</control>

	<!-- Passthrough -->
	<control type="group">
		<include>Animation_CommonFade</include>
		<posx>1170</posx>
		<posy>10</posy>
		<visible>player.passthrough</visible>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>100</width>
			<height>50</height>
			<texture border="5">base-rounded.png</texture>
			<colordiffuse>FF000000</colordiffuse>
		</control>
		<control type="image">
			<posx>30</posx>
			<posy>5</posy>
			<description>Mute image</description>
			<texture>volumeoff.png</texture>
			<width>40</width>
			<height>40</height>
			<aspectratio scalediffuse="false">keep</aspectratio>
			<colordiffuse>mainblue</colordiffuse>
		</control>
	</control>

</controls>
</window>
