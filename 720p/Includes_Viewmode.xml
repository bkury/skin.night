<!-- Sidebar Header -->
<include name="Viewmode_Sidebar_Header">
		<control type="group">
			<include>Viewmode_Infocard_Background</include>

			<!-- Header  -->
			<control type="group">

				<!-- TV Show Title -->
				<control type="label">
					<posy>50</posy>
					<label>$INFO[Container.FirstTitle]</label>
		                        <font>Font_Bartowski_Movies_Plot</font>
		                        <textcolor>FFCCCCCC</textcolor>
		                        <width>390</width>
					<align>left</align>
					<wrapmultiline>false</wrapmultiline>
					<visible>Container.Content(episodes) + isEmpty(Container.Property(primaryFilterActivated))</visible>
		                </control>
				<control type="label">
					<posy>50</posy>
					<label>$INFO[ListItem.TvShowTitle]</label>
		                        <font>Font_Bartowski_Movies_Plot</font>
		                        <textcolor>FFCCCCCC</textcolor>
		                        <width>390</width>
					<align>left</align>
					<wrapmultiline>false</wrapmultiline>
					<visible>Container.Content(episodes) + !isEmpty(Container.Property(primaryFilterActivated))</visible>
		                </control>

				<!-- Second Title -->
				<control type="label">
					<posy>50</posy>
					<width>390</width>
					<align>left</align>
					<label>$INFO[Container.SecondTitle]</label>
					<font>Font_Bartowski_Movies_Plot</font>
					<textcolor>FFCCCCCC</textcolor>
					<visible>Container.Content(seasons) | Container.Content(albums)</visible>
				</control>

				<!-- Label -->
				<control type="label">
					<posx>0</posx>
					<posy>14</posy>
					<label>$INFO[ListItem.Label]</label>
		                        <font>Font_Bartowski_Main_Preplay</font>
		                        <textcolor>mainblue</textcolor>
		                        <width>390</width>
					<height>46</height>
					<align>left</align>
					<wrapmultiline>false</wrapmultiline>
					<scroll>true</scroll>
		                </control>

				<!-- Genre -->
				<control type="label">
					<posy>75</posy>
					<width>390</width>
					<align>left</align>
					<label fallback="Not Available">$INFO[ListItem.Genre]</label>
					<font>Font_Bartowski_Movies_Plot</font>
					<textcolor>FFCCCCCC</textcolor>
					<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(artists) | Container.Content(albums)</visible>
				</control>

				<!-- Season/Episode -->
				<control type="label">
					<posy>75</posy>
					<width>280</width>
					<align>left</align>
					<label>$INFO[Container.SecondTitle][COLOR=mainblue] &#xB7; [/COLOR]Episode $INFO[ListItem.Episode]</label>
					<font>Font_Bartowski_Movies_Plot</font>
					<textcolor>FFCCCCCC</textcolor>
					<visible>Container.Content(episodes) + isEmpty(Container.Property(primaryFilterActivated))</visible>
				</control>
				<control type="label">
					<posy>75</posy>
					<width>280</width>
					<align>left</align>
					<label>Season $INFO[ListItem.Season][COLOR=mainblue] &#xB7; [/COLOR]Episode $INFO[ListItem.Episode]</label>
					<font>Font_Bartowski_Movies_Plot</font>
					<textcolor>FFCCCCCC</textcolor>
					<visible>Container.Content(episodes) + !isEmpty(Container.Property(primaryFilterActivated))</visible>
				</control>

		</control>

	</control>

</include>

