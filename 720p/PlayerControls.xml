				<texturenofocus border="1">osd/button_next_nf.png</texturenofocus>
				<onclick>PlayerControl(Next)</onclick>
			</control>
			<control type="button" id="408">
				<description>Repeat</description>
				<posx>240</posx>
				<posy>0</posy>
