				<posx>-296</posx>
				<posy>-126</posy>
				<width>292</width>
				<height>166</height>
				<texturefocus border="8">common/thumb_border.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<colordiffuse>BackgroundFilterColor</colordiffuse>
				<onleft>409</onleft>
				<onright>402</onright>
				<onup>410</onup>
				<ondown>410</ondown>
				<label>-</label>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onclick>fullscreen</onclick>
