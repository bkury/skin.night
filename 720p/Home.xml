			<onfocus>ActivateWindow(4998)</onfocus>
			<include>Mouse_Trigger</include>
			<visible>Control.hasFocus(65010) | Control.hasFocus(65011)</visible>
		</control>
		<!-- Submenu (Button) -->
		<control type="button">
			<posx>0</posx>
			<posy>690</posy>
			<width>80</width>
			<height>30</height>
