	<control type="group">
		<!-- Show Server Name -->
		<control type="label">		
			<posy>684</posy>
			<posx>35</posx>
			<width>300</width>
			<height>22</height>
			<textcolor>FFCCCCCC</textcolor>
			<label>$INFO[Container(300).ListItem.Label2]</label>
			<visible>Control.hasFocus(300) + Skin.HasSetting(Home_Servername) + ![ Window.IsActive(4998) ]</visible>
                        <include>Animation_CommonFade</include>
		</control>
		<!-- New Year Notification-->
		<control type="label">		
			<posy>680</posy>
			<posx>0</posx>
			<width>1280</width>
			<height>22</height>
			<textcolor>white</textcolor>
			<align>center</align>
			<label>Happy New Year!</label>
			<animation type="Conditional" reversible="false" condition="true" loop="true">
				<effect type="fade" start="0" end="100" time="4000" delay="0" loop="true" reversible="false" />
				<effect type="fade" start="100" end="0" time="4000" delay="4000" loop="true" reversible="false" />
			</animation>
			<visible>SubString(System.Date(ddmm),0101) + ![ Skin.HasSetting(Home_Servername) ]</visible>
		</control>
	</control>

