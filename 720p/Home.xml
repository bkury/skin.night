			<posy>0</posy>
			<width>20</width>
			<height>720</height>
			<onfocus>SetFocus(5000)</onfocus>
			<include>Mouse_Trigger</include>
			<visible>Skin.HasSetting(Deck_Hide) + !Skin.HasSetting(Deck_Disable)</visible>
		</control>
	</control>

