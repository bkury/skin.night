<include name="Home_Navigation_Vertical">
	<!-- Deck Animation -->
	<animation effect="slide" end="-800,0" time="500" tween="cubic" easing="out" condition="ControlGroup(5000).HasFocus">conditional</animation>
	<!-- Submenu Animation -->
	<animation effect="slide" end="-850,0" time="300" condition="Window.IsActive(4998)">conditional</animation>

	<!-- My Shared Content -->
	<onright condition="SubString(Container(300).ListItem.Label,$LOCALIZE[44020]) + !Skin.HasSetting(Deck_NoShared)">Skin.SetBool(mysharedcontent_helper)</onright>
	<onright condition="SubString(Container(300).ListItem.Label,$LOCALIZE[44020]) + !Skin.HasSetting(Deck_NoShared)">XBMC.ActivateWindow(MySharedContent,plexserver://shared,return)</onright>

	<onleft>ActivateWindow(4998)</onleft>
	<onright>5000</onright>
	<include>Navigation_Vertical</include>
</include>
<include name="Home_Navigation_Horizontal">
	<!-- Submenu Animation -->
	<animation effect="fade" start="100" end="0" time="300" condition="Window.IsActive(4998)">conditional</animation>

	<!-- My Shared Content -->
	<onup condition="SubString(Container(300).ListItem.Label,$LOCALIZE[44020]) + !Skin.HasSetting(Deck_NoShared)">Skin.SetBool(mysharedcontent_helper)</onup>
	<onup condition="SubString(Container(300).ListItem.Label,$LOCALIZE[44020]) + !Skin.HasSetting(Deck_NoShared)">XBMC.ActivateWindow(MySharedContent,plexserver://shared,return)</onup>

	<onup>5000</onup>
	<ondown>ActivateWindow(4998)</ondown>
	<include>Navigation_Horizontal</include>
</include>
<include name="Home_Navigation_Panel">
	<!-- Submenu Animation -->
	<animation effect="fade" start="100" end="0" time="300" condition="Window.IsActive(4998)">conditional</animation>
	<ondown>ActivateWindow(4998)</ondown>
	<include>Navigation_Panel</include>
</include>
<include name="Home_Wraplist">
	<control type="wraplist" id="300">
		<include condition="Skin.HasSetting(Home_Horizontal)">Home_Navigation_Horizontal</include>
		<include condition="!Skin.HasSetting(Home_Horizontal)">Home_Navigation_Vertical</include>
		<include>Home_Navigation_Content</include>
