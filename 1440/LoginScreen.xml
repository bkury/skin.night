<?xml version="1.0" encoding="UTF-8"?>
<window id="29">
	<defaultcontrol always="true">52</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>Animation_CommonFade_300</include>
	<controls>

		<!-- Background -->
		<include content="Background_Custom">
			<param name="id_home">13</param>
			<param name="id_fade">13013</param>
			<param name="opacity">30</param>
			<param name="image">background/livetv.jpg</param>
		</include>

		<!-- Welcome -->
		<control type="group">
			<top>240</top>
			<left>300</left>
			<height>160</height>
			<animation effect="slide" time="800" start="0,-2000" end="0,0" tween="cubic" easing="inout">WindowOpen</animation>
			<animation effect="slide" time="800" start="0,0" end="0,-2000" tween="cubic" easing="inout">WindowClose</animation>

	                <control type="label">
				<width>1960</width>
	                        <label>$LOCALIZE[31600]</label> <!-- Welcome -->
	                        <font>Lato_Thin_70</font>
				<align>center</align>
				<textcolor>FFFFFFFF</textcolor>
	                </control>
		</control>

		<!-- Profiles -->
		<control type="grouplist" id="10">
			<top>480</top>
			<left>300</left>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<usecontrolcoords>true</usecontrolcoords>
			<animation effect="slide" time="800" start="0,2000" end="0,0" tween="cubic" easing="inout">WindowOpen</animation>
			<animation effect="slide" time="800" start="0,0" end="0,2000" tween="cubic" easing="inout">WindowClose</animation>
			
			<include content="Startup_Header">
				<param name="label">$LOCALIZE[31137]</param>
			</include>

			<control type="panel" id="52">
				<left>-40</left>
				<width>2040</width>
				<height>300</height>
				<onup>11</onup>
				<ondown>14</ondown>
				<onback>13</onback>
				<animation effect="slide" end="680,0" condition="String.isEqual(Container(52).NumItems,1)">Conditional</animation>
				<animation effect="slide" end="340,0" condition="String.isEqual(Container(52).NumItems,2)">Conditional</animation>

				<itemlayout width="680" height="300">
					<include>LoginScreen_Itemlayout</include>
				</itemlayout>
                
				<focusedlayout width="680" height="300">
					<include>LoginScreen_Focusedlayout</include>
				</focusedlayout>
			</control>
		</control>

		<!-- Clock -->
		<control type="group">
			<include>Clock_Right_Pos</include>
			<include>Clock_Right</include>
                </control>

	</controls>
</window>
